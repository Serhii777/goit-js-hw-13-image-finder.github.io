<li class="card">
    <a href="{{url}}" class="card__link" target="_blank"
        rel="noopener noreferrer">
        <h2 class="card__title">{{name}}</h2>
        <div class="card__wrapper">
            <div class="card__description">
                <p class="card__capital">Capital: {{capital}}</p>
                <p class="card__population">Population: {{population}}</p>
                <ul class="card__list">Languages: {{#each languages}} <li
                        class="card__item"> {{{this.name}}} </li> {{/each}}
            </div>
            <img class="card__image" src="{{flag}}" alt="{{name}}">
            </ul>
        </div>
    </a>
</li>